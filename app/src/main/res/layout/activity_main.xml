<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.plt.MainActivity">

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/radioGroup"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <RadioButton
            android:text="조건검색"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="30dp"
            android:id="@+id/radioButton3"
            android:checked="true" />

        <RadioButton
            android:text="테마검색"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/radioButton2"
            android:layout_alignParentLeft="true"/>
    </RadioGroup>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="text|textPersonName|number"
        android:text="checkhun"
        android:ems="10"
        android:id="@+id/editText"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/radioGroup"
        android:layout_marginTop="20dp"
        style="@style/Widget.AppCompat.EditText"
        android:elevation="2dp"
        android:cursorVisible="true"
        android:backgroundTint="@android:color/holo_green_light"
        android:textSelectHandleRight="@color/common_google_signin_btn_text_dark_focused" />

    <TextView
        android:text="상세조건"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/detailTextView"
        android:layout_below="@+id/editText"
        android:layout_marginTop="20dp"
        android:layout_alignParentLeft="true"
        android:textSize="16dp"
        android:textStyle="normal|bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/testTextView"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/detailTextView"
        android:layout_alignParentLeft="true" />



    <Button
        android:text="조회"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:id="@+id/test_btn"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/testTextView"
        />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/test_btn"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true" />







</RelativeLayout>
